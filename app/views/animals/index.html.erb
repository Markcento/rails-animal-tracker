<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="animals_list">
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Animal', new_animal_path %>
<hr>
<h2>Add New Animal</h2>
<p>
  <!-- Input area for new animal -->
  <div class="field">
    <label for="animal_common_name">Common Name</label><br>
    <input type="text" name="animals[common_name]" id="animal_common_name" required>
  </div>

  <div class="field">
    <label for="animal_latin_name">Latin Name</label><br>
    <input type="text" name="animals[latin_name]" id="animal_latin_name" required>
  </div>

  <div class="field">
    <label for="animal_kingdom">Kingdom</label><br>
    <input type="text" name="animals[kingdom]" id="animal_kingdom" required>
  </div>

  <input type="hidden" name="animals[animal_id]" id="animal_id" value="<%=@animals.last.id%>"/><br>
  <button id="add_new_animal_button">Add New Animal</button>
</p>
